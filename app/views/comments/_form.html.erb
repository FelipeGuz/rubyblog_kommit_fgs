<%= form_with model: [@article, @article.comments.build] do |form| %>

    <div class=container>
        <div class="d-grid d-sm-flex justify-content-sm-center pr-3 pb-3 input-group">
            <span class="input-group-text">I'm</span>
            <%= form.text_field :commenter, class: "form-control"%>
        </div>

        <div class="d-grid d-sm-flex justify-content-sm-center pr-3 pb-3 input-group">
            <span class="input-group-text">And, I think </span>
            <%= form.text_area :body, class: "form-control" %>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <%# Status %>
            <div class='col-4 d-grid d-sm-flex justify-content-sm-center m-auto'>
                <p class='text-center'>
                    <%= form.label :status %>
                    <%= form.select :status, 
                                    ['public','private','archived'],
                                    {},
                                    {selected: 'public', class: 'form-control'}%>
                </p>
            </div>
            <%# Score %>
            <div class='col-4 d-grid d-sm-flex justify-content-sm-center m-auto'>
                <p class="text-center">
                    <%= form.label :score ,class: "form-select" %><br>
                    <%= form.select :score, (1..5).to_a, {},{selected: 0, class: 'form-control'}%>
                </p>
            </div>
            <%# Send botton %>
            <div class='col-4 d-grid d-sm-flex justify-content-sm-center m-auto'>
                <%= form.submit :Submit, class: "btn btn-outline-secondary btn-lg" %>
            </div>
        </div>
    </div>
<% end %>
