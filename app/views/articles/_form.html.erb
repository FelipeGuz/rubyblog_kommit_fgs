<%= form_with model: article do |form| %>
    <div class="container mt-5">
        <div class="d-grid d-sm-flex justify-content-sm-center pr-3 pb-3 input-group">
            <span class="input-group-text"><%= form.label :title %></span><br>
            <%= form.text_field :title, class: "form-control" %>
            <% article.errors.full_messages_for(:title).each do |message|%>
                <div><%= message %></div>
            <% end %>
        </div>

        <div class="d-grid d-sm-flex justify-content-sm-center pr-3 pb-3 input-group-lg">
            <span class="input-group-text"><%= form.label :body %></span><br>
            <%= form.text_area :body, class: "form-control", rows: 10 %>
            <% article.errors.full_messages_for(:body).each do |message|%>
                <div><%= message %></div>
            <% end %>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class='col-6 d-grid d-sm-flex justify-content-sm-center'>
                <p class="text-center">
                    <%= form.label :status %>
                    <%= form.select :status, 
                                    ['public', 'private', 'archived'], 
                                    {},
                                    {selected: 'public', class: 'form-control'} %>
                </p>
            </div>

            <div class='col-6 d-grid d-sm-flex justify-content-sm-center py-3'>
                <%= form.submit :Submit, class: "btn btn-outline-secondary btn-lg" %>
            </div>
        </div>
    </div>
<%end%>